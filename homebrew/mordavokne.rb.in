class Mordavokne < Formula
  desc "Intrusive C++ cross-platform OpenGL based GUI library."
  homepage "https://github.com/igagis/mordavokne"
  url "https://github.com/igagis/mordavokne/archive/$(version).tar.gz"
  sha256 "$(sha256)"

  depends_on "prorab" => :build
  depends_on "libutki"
  depends_on "libpapki"
  depends_on "libpogodi"
  depends_on "libaika"
  depends_on "puu"
  depends_on "glew"
  depends_on "r4"
  depends_on "libmorda"
  depends_on "morda-opengl2-ren"

  def install
    ENV['PATH'] += ':/usr/local/bin'
    system "make", "-f", "src/makefile", "install", "PREFIX=#{prefix}"
  end

  #test do
  #  system "make", "test"
  #end
end
