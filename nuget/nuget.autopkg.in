nuget{
	nuspec{
		id = libmordavokne;
		version : $(version);
		title: Intrusive C++ GUI library;
		authors: {Ivan Gagis};
		owners: {Ivan Gagis};
		licenseUrl: "https://raw.githubusercontent.com/igagis/mordavokne/master/LICENSE";
		projectUrl: "https://github.com/igagis/mordavokne";
		iconUrl: "https://github.com/igagis/mordavokne/blob/master/logo.svg";
		requireLicenseAcceptance:false;
		summary: C++ GUI library;

		description: @"Intrusive C++ GUI library";
		releaseNotes: "Initial release";
		copyright: Copyright 2016 Ivan Gagis;
		tags: { native};
	}
	dependencies {
		packages : {
			libkolme/1.0.6;
			libmorda/0.5.4;
			glew.v140/1.12.0;
			libpapki/1.0.15;
			libpogodi/1.0.10;
			libstob/3.2.7;
			libutki/1.0.22;
		};
	}
	files {
		//this is needed to put headers in the mordavokne folder
		nestedInclude: {
			#destination = ${d_include}mordavokne;
			"..\src\mordavokne\**\*.hpp"
		};

		[x86,release] {
			lib: ..\msvs_solution\Release\mordavokne.lib;
		}

		[x86,debug] {
			lib: ..\msvs_solution\Debug\libmordavokne.lib;
		}

		[x64,release] {
			lib: ..\msvs_solution\x64\Release\libmordavokne.lib;
		}

		[x64,debug] {
			lib: ..\msvs_solution\x64\Debug\libmordavokne.lib;
		}
	}
}
