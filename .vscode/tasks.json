{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make autojobs=true",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "build_debug",
            "type": "shell",
            "command": "make autojobs=true config=dbg",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": []
        },
        {
            "label": "clean_debug",
            "type": "shell",
            "command": "make clean config=dbg",
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "command": "make run",
            "problemMatcher": [],
            "dependsOn": "build"
        },
        {
            "label": "run_debug",
            "type": "shell",
            "command": "make run config=dbg",
            "problemMatcher": [],
            "dependsOn": "build_debug"
        }
    ]
}